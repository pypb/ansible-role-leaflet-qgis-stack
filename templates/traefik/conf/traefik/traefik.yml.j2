---
global:
  checkNewVersion: {{ leaflet_qgis_stack_traefik_check_new_version }}
  sendAnonymousUsage: {{ leaflet_qgis_stack_traefik_send_anonymous_usage }}

log:
  level: {{ leaflet_qgis_stack_traefik_log_level }}

accessLog:
  filePath: "/logs/access.log"
  bufferingSize: 100
  format: json
  fields:
    defaultMode: drop
    names:
      ClientHost: keep
      DownstreamStatus: keep
      DownstreamContentSize: keep
      Duration: keep
      RequestHost: keep
      RequestPort: keep
      RequestMethod: keep
      RequestPath: keep
      RequestProtocol: keep
      RequestScheme: keep
      RouterName: keep
      StartLocal: keep
      StartUTC: keep
    headers:
      defaultMode: drop
      names:
        Referer: keep
        User-Agent: keep
        Content-Type: keep

providers:
  docker:
    exposedByDefault: false
  file:
    directory: /etc/traefik
    watch: true

api:
  dashboard: false

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
    forwardedHeaders:
      trustedIPs:
        - "127.0.0.1/32"
        - "10.0.0.0/8"
        - "192.168.0.0/16"
        - "172.16.0.0/12"
  traefik:
    address: ":8080"

metrics:
  prometheus:
    addEntryPointsLabels: true
    addRoutersLabels: true
    addServicesLabels: true

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ leaflet_qgis_stack_traefik_acme_email }}
      storage: "/data/acme.json"
      tlsChallenge:
      httpChallenge:
        entryPoint: web

tls:
  options:
    default:
      sniStrict: {{ leaflet_qgis_stack_traefik_sni_strict }}
